[general]

# 'cause I got a fancy 165Hz monitor
framerate = 165

# automatic sensitivity
autosens = 1

# manual, or initial value if autosens is used
sensitivity = 75

bars = 0
bar_width = 1
bar_spacing = 0

lower_cutoff_freq = 50
higher_cutoff_freq = 15000


[input]

method = pipewire
source = auto


[output]

# ncurses to support right orientation
method = ncurses
orientation = right

# no "mirroring" effect, low freq on bottom
channels = mono
mono_option = average
reverse = 1

# removes flickering in alacritty terminal emulator
synchronized_sync = 1

# show a flat bar at the bottom of the screen when idle
show_idle_bar_heads = 1


[color]

# use a gradient
gradient = 1

# default gradients idc lol
gradient_color_1 = '#59cc33'
